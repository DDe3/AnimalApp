<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottom_navigation_bar_botonCuatro"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:fontFamily="@font/amaranto"
        android:gravity="center">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloque_uno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:text="@string/tutorial_uno"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/imgViewGato"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/gato_claro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgViewGatoOscuro"
                    app:layout_constraintTop_toBottomOf="@id/textView5"
                    app:layout_constraintBottom_toBottomOf="parent">
                </ImageView>

                <ImageView
                    android:id="@+id/imgViewGatoOscuro"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toEndOf="@id/imgViewGato"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/gato_oscuro"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView5">
                </ImageView>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="64dp"
                    android:src="@drawable/okay_icon"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgViewGato">

                </ImageView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:src="@drawable/wrong_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.677"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewGatoOscuro">

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/tutorial_dos"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <ImageView
                    android:id="@+id/imgViewCompleto"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/raton_completo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgViewIncompleto"
                    app:layout_constraintTop_toBottomOf="@id/textView6"
                    app:layout_constraintBottom_toBottomOf="parent">
                </ImageView>

                <ImageView
                    android:id="@+id/imgViewIncompleto"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toEndOf="@id/imgViewCompleto"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/raton_incompleto"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView6">
                </ImageView>


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="64dp"
                    android:src="@drawable/okay_icon"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgViewCompleto">

                </ImageView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:src="@drawable/wrong_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.677"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewIncompleto">

                </ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/consejoTres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/tutorial_tres"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <ImageView
                    android:id="@+id/imgViewUnico"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/sardina"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgViewMultiple"
                    app:layout_constraintTop_toBottomOf="@id/consejoTres"
                    app:layout_constraintBottom_toBottomOf="parent">
                </ImageView>

                <ImageView
                    android:id="@+id/imgViewMultiple"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toEndOf="@id/imgViewUnico"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/sardinas"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/consejoTres">
                </ImageView>


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="64dp"
                    android:src="@drawable/okay_icon"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgViewUnico">

                </ImageView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:src="@drawable/wrong_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.677"
                    app:layout_constraintStart_toEndOf="@+id/imageView9"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewMultiple">

                </ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/consejoCuatro"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/tutorial_cuatro"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <ImageView
                    android:id="@+id/imgViewUnedited"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/gallo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgViewEdited"
                    app:layout_constraintTop_toBottomOf="@id/consejoCuatro"
                    app:layout_constraintBottom_toBottomOf="parent">
                </ImageView>

                <ImageView
                    android:id="@+id/imgViewEdited"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toEndOf="@id/imgViewUnedited"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/montaje"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/consejoCuatro">
                </ImageView>


                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="64dp"
                    android:src="@drawable/okay_icon"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgViewUnedited">

                </ImageView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:src="@drawable/wrong_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.677"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewEdited">

                </ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/consejoCinco"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/tutorial_cinco"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <ImageView
                    android:id="@+id/imgViewFocus"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/focus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imgViewBlur"
                    app:layout_constraintTop_toBottomOf="@id/consejoCinco"
                    app:layout_constraintBottom_toBottomOf="parent">
                </ImageView>

                <ImageView
                    android:id="@+id/imgViewBlur"
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toEndOf="@id/imgViewFocus"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/unfocus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/consejoCinco">
                </ImageView>


                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="64dp"
                    android:src="@drawable/okay_icon"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgViewFocus">

                </ImageView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:src="@drawable/wrong_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.677"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewBlur">

                </ImageView>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>